<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Email Length Analysis</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="max-w-4xl mx-auto p-6">
    <div class="bg-white rounded-2xl shadow-md p-6">
      <h1 class="text-3xl font-semibold text-center text-gray-800 mb-6">ðŸ“Š User Email Length Analysis</h1>
      <div class="relative">
        <canvas id="userChart" class="w-full h-96"></canvas>
      </div>
    </div>
  </div>

  <script>
    async function fetchData() {
      try {
        const response = await fetch('https://jsonplaceholder.typicode.com/users');
        const data = await response.json();

        const labels = data.map(user => user.name);
        const emailLengths = data.map(user => user.email.length);

        const ctx = document.getElementById('userChart').getContext('2d');
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: labels,
            datasets: [{
              label: 'Email Length (Characters)',
              data: emailLengths,
              backgroundColor: '#3b82f6',
              borderColor: '#2563eb',
              borderWidth: 1,
              borderRadius: 8,
              hoverBackgroundColor: '#2563eb',
              hoverBorderColor: '#1d4ed8'
            }]
          },
          options: {
            responsive: true,
            plugins: {
              legend: {
                labels: {
                  color: '#1f2937',
                  font: { weight: 'bold' }
                }
              }
            },
            scales: {
              y: {
                beginAtZero: true,
                ticks: { color: '#6b7280' },
                grid: { color: '#e5e7eb' }
              },
              x: {
                ticks: { color: '#6b7280' },
                grid: { display: false }
              }
            }
          }
        });
      } catch (error) {
        console.error('Error fetching data:', error);
      }
    }

    fetchData();
  </script>
</body>
</html>
